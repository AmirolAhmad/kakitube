- content_for :title do
	Kakitube.com | TV Series List
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | TV Series List", :url => request.url, :description => "KakiTube", :canonical => request.url, :og_title => "KakiTube | TV Series List", :og_description => "KakiTube" }

/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1= @episode.title
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			%h2 #{@season.siri.title} - #{@season.title} - #{@episode.title}
			%hr
			.embed-responsive.embed-responsive-16by9
				.embed-responsive-item= @episode.embed.html_safe
			%hr
			= link_to 'Edit this episode', edit_siri_season_episode_path(@season.siri, @season, @episode), class: "btn btn-primary"
			= link_to 'Back to Episode list', siri_season_episodes_path, class: "btn btn-default"