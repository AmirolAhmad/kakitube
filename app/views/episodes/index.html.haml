- content_for :title do
	KakiTube | Episode List for #{@season.siri.title} #{@season.title}
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | Episode List for #{@season.siri.title} #{@season.title}", :url => request.url, :description => "KakiTube | Episode List for #{@season.siri.title} #{@season.title}", :canonical => request.url, :og_title => "KakiTube | Episode List for #{@season.siri.title} #{@season.title}", :og_description => "KakiTube | Episode List for #{@season.siri.title} #{@season.title}" }
	
/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1 Episode List for #{@season.siri.title} #{@season.title}
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			.panel.panel-default
				.panel-heading
					%h3.panel-title
						Episode List for #{@season.siri.title} #{@season.title} #{link_to "Add new episode", new_siri_season_episode_path, class: "btn btn-xs btn-primary pull-right", style: "color:#FFFFFF;"}
				.panel-body
					%table.table.table-bordered.table-hovered.display{id: "postLists"}
						%thead
							%tr
								%th Episode Title
								%th.col-md-3 Date Added
								%th.col-md-2 Action
						%tbody
							- @episodes.each do |episode|
								%tr
									%td= episode.title
									%td= episode.created_at.strftime("%d %B %Y")
									%td
										.btn-group.btn-group-justified.btn-group-xs
											= link_to siri_season_episodes_path(@season, episode), class: "btn btn-primary" do
												%span.glyphicon.glyphicon-eye-open{"aria-hidden" => true}
											/ = link_to edit_siri_url(season), class: "btn btn-default" do
											/ 	%span.glyphicon.glyphicon-edit{"aria-hidden" => true}
											/ = link_to siri_path(season), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do
											/ 	%span.glyphicon.glyphicon-remove{"aria-hidden" => true}