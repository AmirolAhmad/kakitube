- content_for :title do
	Kakitube.com | Episode List for #{@asian_season.asian.title} #{@asian_season.title}
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | Episode List for #{@asian_season.asian.title} #{@asian_season.title}", :url => request.url, :description => "KakiTube | Episode List for #{@asian_season.asian.title} #{@asian_season.title}", :canonical => request.url, :og_title => "KakiTube | Episode List for #{@asian_season.asian.title} #{@asian_season.title}", :og_description => "KakiTube | Episode List for #{@asian_season.asian.title} #{@asian_season.title}" }

/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1 Episode List for #{@asian_season.asian.title} #{@asian_season.title}
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			.panel.panel-default
				.panel-heading
					%h3.panel-title
						Episode List for #{@asian_season.asian.title} #{@asian_season.title} #{link_to "Add new episode", new_asian_asian_season_asian_episode_path, class: "btn btn-xs btn-primary pull-right", style: "color:#FFFFFF;"}
				#series-list.panel-body
					%table.table.table-bordered.table-hovered.display{id: "postLists"}
						%thead
							%tr
								%th Episode Title
								%th.col-md-3 Date Added
								%th.col-md-2 Action
						%tbody
							- @asian_episodes.each do |episode|
								%tr
									%td= episode.title
									%td= episode.created_at.strftime("%d %B %Y")
									%td
										.btn-group.btn-group-justified.btn-group-xs
											= link_to asian_asian_season_asian_episode_path(@asian_season.asian, @asian_season, episode), class: "btn btn-primary" do
												%span.glyphicon.glyphicon-eye-open{"aria-hidden" => true}
											= link_to edit_asian_asian_season_asian_episode_path(@asian_season.asian, @asian_season, episode), class: "btn btn-default" do
												%span.glyphicon.glyphicon-edit{"aria-hidden" => true}
											= link_to asian_asian_season_asian_episode_path(@asian_season.asian, @asian_season, episode), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do
												%span.glyphicon.glyphicon-remove{"aria-hidden" => true}
				.panel-footer
					= link_to "Back", asian_asian_seasons_path, class: "btn btn-default"
