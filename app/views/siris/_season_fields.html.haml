%hr
.form-group
	= f.label :title, "Season Title", class: "col-sm-2 control-label"
	.col-md-10
		= f.text_field :title, class: "form-control", placeholder: "Season Title"
.form-group
	= f.label :poster, "Season Poster", class: "col-sm-2 control-label"
	.col-md-10
		- if f.object.poster?
			= image_tag f.object.poster_url(:standard)
		- else
			= image_tag('poster-default.png', class: "img-responsive")
		%h6 Replace current image
		= f.file_field :poster, class: "form-control"
		= f.hidden_field :poster_cache
.checkbox
	%label
		= f.check_box :_destroy
		Remove Season
	= f.fields_for :episodes do |builder|
		= render 'episode_fields', f: builder
	= link_to_add_fields "Add Episodes", f, :episodes