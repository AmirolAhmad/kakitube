#episode-form
	%hr
	.form-group
		= f.label :title, "Episode Title", class: "col-sm-2 control-label"
		.col-sm-10
			= f.text_field :title, class: "form-control", placeholder: "Episode Title"
	.form-group
		= f.label :description, "Episode Description", class: "col-sm-2 control-label"
		.col-sm-10
			= f.text_area :description, class: "form-control", placeholder: "Episode Description", rows: 6
	.form-group
		.col-sm-6
			= f.hidden_field :_destroy
			= link_to "Remove Episode", '#', class: "remove_fields"