- content_for :title do
	KakiTube | Movie Genre
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | Movie Genre", :url => request.url, :description => "KakiTube | Movie Genre", :canonical => request.url, :og_title => "KakiTube | Movie Genre", :og_description => "KakiTube | Movie Genre" }
	
/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1 Movie Genre List
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			#genre-list.panel.panel-default
				.panel-heading
					%h3.panel-title
						Movie Genre List
				.panel-body
					= link_to "New Movie Genre", new_genre_path, id: "new_type", remote: true
					%hr
					%table.table.table-bordered.table-hovered
						%thead
							%tr
								%th Name
								%th.col-md-2 Date Added
								%th.col-md-2 Action
						%tbody
							- @genres.each do |genre|
								%tr{id: "all_genre"}
								%tr
									%td= genre.name
									%td= genre.created_at.strftime("%d %B %Y")
									%td= link_to "(remove)", genre, method: :delete, data: {confirm: "Are you sure?"}
				/ .panel-footer

