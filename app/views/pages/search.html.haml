.row
	.col-md-8
		.page-header
			%h2 Search result for '#{@q}'
		- if @posts.any?
			- @posts.each do |p|
				.movie.small-movie.effect{class: cycle('', '', '', '', 'last')}
					.mask
					= link_to genre_show_path(p, sort: p.genre.slug) do
						.gradient
						= image_tag(p.poster_url(:thumb), class: "img-responsive")
						.mini-desc2
							%h5= p.title
		- else
			%h4 No search result found for '#{@q}'
		.row
			.col-md-12
				= will_paginate @posts
	.col-md-4
		= render partial: "sidebar_right"