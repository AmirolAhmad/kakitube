- content_for :title do
	Kakitube.com | TV Series Genre
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | TV Series Genre", :url => request.url, :description => "KakiTube | TV Series Genre", :canonical => request.url, :og_title => "KakiTube | TV Series Genre", :og_description => "KakiTube | TV Series Genre" }
	
/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1 TV Series Genre List
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			#genre-list.panel.panel-default
				.panel-heading
					%h3.panel-title
						TV Series Genre List
				.panel-body
					= link_to "New TV Series Genre", new_siri_genre_path, id: "new_siri", remote: true
					%hr
					%table.table.table-bordered.table-hovered
						%thead
							%tr
								%th Name
								%th.col-md-2 Date Added
								%th.col-md-2 Action
						%tbody
							- @siri_genres.each do |siri_genre|
								%tr{id: "all_siri_genre"}
								%tr
									%td= siri_genre.name
									%td= siri_genre.created_at.strftime("%d %B %Y")
									%td= link_to "(remove)", siri_genre, method: :delete, data: {confirm: "Are you sure?"}
				/ .panel-footer

