- content_for :title do
	Kakitube.com | Asian Drama Genre
- content_for :meta_tags do
	= render :partial => 'application/meta_tags', :locals => { :type => "website", :title => "KakiTube | Asian Drama Genre", :url => request.url, :description => "KakiTube | TV Series Genre", :canonical => request.url, :og_title => "KakiTube | Asian Drama Genre", :og_description => "KakiTube | Asian Drama Genre" }

/ Page Content
.container
	.row
		.col-lg-12
			.page-header
				%h1 Asian Drama Genre List
	.row
		.col-md-4
			= render partial: "sidebar"
		.col-md-8
			#genre-list.panel.panel-default
				.panel-heading
					%h3.panel-title
						Asian Drama Genre List
				.panel-body
					= link_to "New Asian Drama Genre", new_asian_genre_path, id: "new_asian", remote: true
					%hr
					%table.table.table-bordered.table-hovered
						%thead
							%tr
								%th Name
								%th.col-md-2 Date Added
								%th.col-md-2 Action
						%tbody
							- @asian_genres.each do |asian_genre|
								%tr{id: "all_asian_genre"}
								%tr
									%td= asian_genre.name
									%td= asian_genre.created_at.strftime("%d %B %Y")
									%td= link_to "(remove)", asian_genre, method: :delete, data: {confirm: "Are you sure?"}
				/ .panel-footer
